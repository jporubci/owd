body {
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  background-attachment: fixed;
  text-align: left;
  background-color: black;
}

ul.custom-type {
list-style-type: square; 
}
ul.second-type {
  list-style-type: circle; 
}

.textbox {
  background-color: black;
  color: #CCCCCC; 
  padding: 10px; 
  border: 1px solid #ccc; 
  border-radius: 10px; 
  margin-bottom: 20px; 
  margin-right: 20px; 
  text-align: center;
}
.wide-textbox {
  background-color: black;
  color: #CCCCCC;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 10px;
  margin-bottom: 20px;
  text-align: left;
  height: auto; 
  overflow-y: auto; 
}

.grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr); 
  grid-gap: 20px; 
  margin-bottom: 40px; 
}
.three-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr); /* Three equal columns */
  grid-gap: 20px; /* Space between grid items */
  margin-bottom: 40px;
}
.header {
    background-image: url('background.jpg');
    background-size: cover;
    background-position: center;
    padding: 15px;
    text-align: center;
  
}
h1 {
  font-size: 70px;
  font-weight: 500;
  text-align: center;
  color: #CCCCCC;
}

a {
  color: #00E5FF; /* Neon blue for links */
}